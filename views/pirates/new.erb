<h1>A Pirate and his Ship!</h1>
<body>
<form method="post" action="/pirates">
  
  <label for="pirate">Pirate</label>
  <input type="text" id="pirate[name]" name="pirate[name]" placeholder="Pirate name">
  <input type="text" id="pirate[weight]" name="pirate[weight]" placeholder="Pirate weight">
  <input type="text" id="pirate[height]" name="pirate[height]" placeholder="Pirate height">
  <br>
  <br>
  <label for="ship_name_1">Ship 1</label>
  <input type="text" id="ship_name_1" name="pirate[ships][][name]" placeholder="Ship name">
  <input type="text" id="ship_type_1" name="pirate[ships][][type]" placeholder="Ship type">
  <input type="text" id="ship_booty_1" name="pirate[ships][][booty]" placeholder="Ship booty">
  <br>
  <br>
  <label for="ship_name_2">Ship 2</label>
  <input type="text" id="ship_name_2" name="pirate[ships][][name]" placeholder="Ship name">
  <input type="text" id="ship_type_2" name="pirate[ships][][type]" placeholder="Ship type">
  <input type="text" id="ship_booty_2" name="pirate[ships][][booty]" placeholder="Ship booty">
  <br>
  <br>
  <input type="submit" value="Submit">
</form>
</body>